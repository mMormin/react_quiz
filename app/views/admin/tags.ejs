<%- include("partials/header") %>

<main class="container py-4">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-6">
            <h2><b>Tags</b> List</h2>
          </div>
          <div class="col-sm-6">
            <a href="#addTagModal" class="btn btn-success" data-toggle="modal">
              <i class="material-icons">&#xE147;</i>
              <span>ADD</span>
            </a>
            <a
              href="#deleteEmployeeModal"
              class="btn btn-danger"
              data-toggle="modal"
            >
              <i class="material-icons">&#xE15C;</i><span>DELETE ALL</span>
            </a>
          </div>
        </div>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>
              <span class="custom-checkbox">
                <input type="checkbox" id="selectAll" />
                <label for="selectAll"></label>
              </span>
            </th>
            <th>Name</th>
            <th>Used</th>
            <th>Manage</th>
          </tr>
        </thead>
        <tbody>
          <% for (const tag of tags) { %>
          <tr>
            <td>
              <span class="custom-checkbox">
                <input
                  type="checkbox"
                  id="tag-<%= tag.id %>"
                  name="options[]"
                  value="<%= tag.name %>"
                />
                <label for="tag-<%= tag.id %>"></label>
              </span>
            </td>
            <td><%= tag.name %></td>
            <td class="paddy"><%= tag.quizzesList.length %></td>
            <td class="controls">
              <a
                href="#editTagModal<%= tag.id %>"
                class="edit"
                data-toggle="modal"
              >
                <i class="material-icons" data-toggle="tooltip" title="Edit">
                  &#xE254;
                </i>
              </a>
              <a
                href="#deleteTagModal<%= tag.id %>"
                class="delete"
                data-toggle="modal"
              >
                <i class="material-icons" data-toggle="tooltip" title="Delete">
                  &#xE872;
                </i>
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="clearfix">
    <div class="hint-text">
      Showing <b><%= tags.length %></b> out of <b><%= tags.length %></b> entries
    </div>
  </div>

  <%- include("partials/modals/addModal", { data }) %> <% for (const tag of
  tags) { %> <%- include("partials/modals/editModal", { data, tag, id: tag.id})
  %> <%- include("partials/modals/deleteModal", { data, id: tag.id}) %> <% } %>
</main>

<%- include("../partials/footer") %>
