<div id="delete<%= modal.name %>" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/admin<%= modal.path %>" method="POST">
        <div class="modal-header">
          <h4 class="modal-title">Delete <%= modal.name %></h4>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-hidden="true"
          >
            &times;
          </button>
        </div>
        <div class="modal-body">
          <p>Are you sure ?</p>
          <p class="text-warning">
            <small>This action cannot be undone.</small>
          </p>
        </div>
        <div class="modal-footer">
          <input
            type="button"
            class="btn btn-default"
            data-dismiss="modal"
            value="Cancel"
          />
          <input
            name="<%= modal.type %>"
            type="submit"
            class="btn btn-danger confirmAction"
            value="Delete"
          />
        </div>
      </form>
    </div>
  </div>
</div>
