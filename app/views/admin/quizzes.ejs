<%- include("partials/header") %>

<main class="container py-4">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-6">
            <h2><b>Quizzes</b> List</h2>
          </div>
          <div class="col-sm-6">
            <a
              href="#addEmployeeModal"
              class="btn btn-success"
              data-toggle="modal"
            >
              <i class="material-icons">&#xE147;</i>
              <span>ADD</span>
            </a>
            <a
              href="#deleteEmployeeModal"
              class="btn btn-danger"
              data-toggle="modal"
            >
              <i class="material-icons">&#xE15C;</i><span>DELETE ALL</span>
            </a>
          </div>
        </div>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>
              <span class="custom-checkbox">
                <input type="checkbox" id="selectAll" />
                <label for="selectAll"></label>
              </span>
            </th>
            <th>ID</th>
            <th>Title</th>
            <th>Tags</th>
            <th>User</th>
            <th>Manage</th>
          </tr>
        </thead>
        <tbody>
          <% for (const quiz of quizzes) { %>
          <tr>
            <td>
              <span class="custom-checkbox">
                <input
                  type="checkbox"
                  id="<%= quiz.id %>"
                  name="options[]"
                  value="<%= quiz.description %>"
                />
                <label for="<%= quiz.id %>"></label>
              </span>
            </td>
            <td><%= quiz.id %></td>
            <td><%= quiz.description %></td>
            <td>
              <ul class="list-unstyled mb-4 p-0">
                <% for (const tag of quiz.tagsList) { %>
                <li class="badge bg-primary"><%= tag.name %></li>
                <% } %>
              </ul>
            </td>
            <th><%= quiz.author.email %></th>
            <td class="controls">
              <a href="#editEmployeeModal" class="edit" data-toggle="modal">
                <i class="material-icons" data-toggle="tooltip" title="Edit">
                  &#xE254;
                </i>
              </a>
              <a
                href="#deleteQuizModal"
                class="delete"
                data-toggle="modal"
                data-selector="<%= quiz.id %>"
              >
                <i class="material-icons" data-toggle="tooltip" title="Delete">
                  &#xE872;
                </i>
              </a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="clearfix">
    <div class="hint-text">
      Showing <b><%= quizzes.length %></b> out of
      <b><%= quizzes.length %></b> entries
    </div>
  </div>

  <%- include("partials/modal", {modal:modalValues, add: "quiz"}) %>
</main>

<%- include("../partials/footer") %>
