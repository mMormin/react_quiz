<main class="container py-4">
  <h1>Th√®mes</h1>
  <% if (locals.error) { %>
    <%- include("partials/error") %>
  <% } else { %>
  <div>
    <% for (const tag of tags) { %>
      <span class="badge bg-primary p-2 mb-1"><%= tag.name %></span>
      <ul>
        <% for (const question of tag.quizzesList) { %>
          <li><a href="/quiz/<%= question.id %>"><%= question.title %></a></li>
        <% } %>
      </ul>
    <% } %>
  </div>
  <% } %>
</main>

