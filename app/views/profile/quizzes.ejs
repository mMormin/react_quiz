<%- include("../partials/header") %> <%- include("../partials/nav") %>

<main class="container py-4">
  <div class="d-flex justify-content-between align-items-center mt-4 mb-5">
    <h1>MON PROFIL</h1>

    <nav class="w-25">
      <ul class="profile__menu d-flex justify-content-around bg-primary">
        <li><a class="text-white" href="/profile">Profil</a></li>
        <li>
          <a class="active text-white" href="/profile/quizs">Mes quizs</a>
        </li>
        <li><a class="text-white" href="/profile/score">Mes scores</a></li>
      </ul>
    </nav>
  </div>
  <h2>Mes quizs</h2>

  <% if (locals.error) { %> <%- include("../partials/error") %> <% } else { %>
  <ul class="mb-4">
    <% for (const quiz of quizzes) { %>
    <a class="text-decoration-none" href="/profile/quizs?quiz_id=/<%= quiz.id %>/">
      <li class="quizzes bg-primary p-4 mb-2 text-white">
        <div class="d-flex justify-content-start align-items-start flex-column">
          <h3><%= quiz.title %></h3>
          <p>Nombre de questions : <span></span></p>
        </div>
        <ul class="list-unstyled mb-4 p-0">
          <% for (const tag of quiz.tagsList) { %>
          <li class="badge bg-primary"><%= tag.name %></li>
          <% } %>
        </ul>
        <div class="button button--false mt-3">Voir le quiz</div>
      </li>
    </a>
    <% } %>
  </ul>
  <% } %>
  <a class="button button--add" href="/profile/quizs/add">Ajouter un quizz</a>
</main>

<%- include("../partials/footer") %>
