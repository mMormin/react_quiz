<%- include("../partials/header") %>
<%- include("../partials/nav") %>

<main class="container py-4">
  <h1 class="my-3">Mon profil</h1>

  <nav>
    <ul>
      <li><a href="/profile/<%= user.email %>">Profil</a></li>
      <li><a class="active" href="/profile/quizzes">Mes quizs</a></li>
      <li><a href="/profile/score">Mes scores</a></li>
    </ul>
  </nav>

  <form action="/profile/edit/<%= user.email %>" method="POST">
    <h2>Mes informations</h2>
    <label class="form-label h4" for="firstname">Pr√©nom</label>
    <input
      class="form-control mb-4 disabled"
      type="text"
      id="firstname"
      placeholder="<%= user.firstname %>"
      value="<%= user.firstname %>"
    />

    <label class="form-label h4" for="lastname">Nom</label>
    <input
      class="form-control mb-4 disabled"
      type="text"
      id="lastname"
      placeholder="<%= user.lastname %>"
      value="<%= user.lastname %>"
    />

    <label class="form-label h4" for="email">Email</label>
    <input
      class="form-control mb-4 disabled"
      type="text"
      id="email"
      placeholder="<%= user.email %>"
      value="<%= user.email %>"
    />

    <label class="form-label h4" for="email">Mot de passe</label>
    <input
      class="form-control mb-4"
      type="text"
      disabled
      id="password"
      value="********"
    />

    <button class="button button--edit">Modifier</button>
    <input class="button my-4 mx-auto hidden" type="submit" value="Valider" />
  </form>
</main>

<%- include("../partials/footer") %>
