<%- include("../partials/header") %>
<%- include("../partials/nav") %>

<main class="container py-4">
  <div class="d-flex justify-content-between align-items-center mt-4 mb-5">
    <h1>MON PROFIL</h1>
  
    <nav class="w-25">
      <ul class="profile__menu d-flex justify-content-around bg-primary">
        <li><a class="active text-white" href="/profile">Profil</a></li>
        <li><a class="text-white" href="/profile/quizs">Mes quizs</a></li>
        <li><a class="text-white" href="/profile/score">Mes scores</a></li>
      </ul>
    </nav>
  </div>

  <form class="p-5" action="/profile" method="POST">
    <h2>Mes informations</h2>
    <label class="form-label h4 mb-3" for="firstname">Pr√©nom</label>
    <input
      class="form-control mb-4 disabled"
      type="text"
      id="firstname"
      placeholder="<%= user.firstname %>"
      value="<%= user.firstname %>"
    />

    <label class="form-label h4 mb-3" for="lastname">Nom</label>
    <input
      class="form-control mb-4 disabled"
      type="text"
      id="lastname"
      placeholder="<%= user.lastname %>"
      value="<%= user.lastname %>"
    />

    <label class="form-label h4 mb-3" for="email">Email</label>
    <input
      class="form-control mb-4 disabled"
      type="text"
      id="email"
      placeholder="<%= user.email %>"
      value="<%= user.email %>"
    />

    <label class="form-label h4 mb-3" for="email">Mot de passe</label>
    <input
      class="form-control mb-4"
      type="text"
      disabled
      id="password"
      value="********"
    />

    <button class="button button--edit">Modifier</button>
    <input class="button my-4 mx-auto hidden" type="submit" value="Valider" />
  </form>
</main>

<%- include("../partials/footer") %>
