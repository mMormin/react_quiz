<%- include("../partials/header") %> <%- include("../partials/nav") %>

<main class="container py-4">
  <div class="d-flex justify-content-between align-items-center mt-4 mb-5">
    <h1>MON PROFIL</h1>

    <nav class="w-25">
      <ul class="profile__menu d-flex justify-content-around bg-primary">
        <li><a class="text-white" href="/profile">Profil</a></li>
        <li>
          <a class="active text-white" href="/profile/quizzes">Mes quizs</a>
        </li>
        <li><a class="text-white" href="/profile/score">Mes scores</a></li>
      </ul>
    </nav>
  </div>

  <h2>Mes Quizs</h2>

  <form class="p-5" action="/profile/quiz/add" method="POST">
    <h2>Ajout d'un quiz</h2>
    <% if (locals.error) { %> <%- include("../partials/error") %> <% } %>
    <label class="form-label h4 mb-3" for="title">Titre</label>
    <input
      class="form-control mb-4"
      type="text"
      id="title"
      name="title"
      placeholder="Quel est le muscle ?"
    />

    <label class="form-label h4 mb-3" for="description">Description</label>
    <input
      class="form-control mb-4"
      type="text"
      id="description"
      name="description"
      placeholder="Au début des années 90..."
    />

    <fieldset>
      <legend class="form-label h4 mb-3">Catégorie(s)</legend>

      <select class="tags w-100" name="tag" id="tag" multiple>
        <% for (const tag of tags) { %>
        <option class="tags__tag" value="<%= tag.id %>"><%= tag.name %></option>
        <% } %>
      </select>
    </fieldset>

    <input class="button my-4 mx-auto" type="submit" value="Ajouter" />
  </form>
</main>

<%- include("../partials/footer") %>
