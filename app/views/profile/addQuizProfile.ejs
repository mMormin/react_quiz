<%- include("../partials/header") %> <%- include("../partials/nav") %>

<main class="container py-4">
  <div class="d-flex justify-content-between align-items-center mt-4 mb-5">
    <h1>MON PROFIL</h1>
  
    <nav class="w-25">
      <ul class="profile__menu d-flex justify-content-around bg-primary">
        <li><a class="text-white" href="/profile">Profil</a></li>
        <li><a class="active text-white" href="/profile/quizzes">Mes quizs</a></li>
        <li><a class="text-white" href="/profile/score">Mes scores</a></li>
      </ul>
    </nav>
  </div>

  <h2>Mes Quizs</h2>

  <form class="p-5" action="/profile/edit" method="POST">
    <h2>Ajout d'un quiz</h2>
    <label class="form-label h4 mb-3" for="title">Prénom</label>
    <input
      class="form-control mb-4 disabled"
      type="text"
      id="title"
      placeholder="Quel est le muscle ?"
      value=""
    />

    <label class="form-label h4 mb-3" for="description">Nom</label>
    <input
      class="form-control mb-4 disabled"
      type="text"
      id="description"
      placeholder="Au début des années 90..."
      value=""
    />

    <fieldset>
      <legend class="form-label h4 mb-3">Catégorie</legend>

      <select name="tag" id="tag">
        <% for (const tag of tags) { %>
        <option value="<%= tag.name %>"><%= tag.name %></option>
        <% } %>
      </select>
    </fieldset>

    <input class="button my-4 mx-auto" type="submit" value="Ajouter" />
  </form>
</main>

<%- include("../partials/footer") %>
